<link rel="stylesheet" href="partial-styles/game-area.css">

<div id="game-area">
    <div id="game-info">
        <div id="room-id-container">
            <input type="text" value="roomID" id="room-id">
            <button type="button" id="copy-room-id-button"></button>
        </div>
        <div id="score-bar">
            <div id="user-score" class="player-score">
                <div class="score-block score-block-1"></div>
                <div class="score-block score-block-2"></div>
                <div class="score-block score-block-3"></div>
                <div class="score-block score-block-4"></div>
                <div class="score-block score-block-5"></div>
                <div class="score-block score-block-6"></div>
                <div class="score-block score-block-7"></div>
                <p class="score">0</p>
            </div>
            <p id="vs">VS</p>
            <div id="oponent-score" class="player-score">
                <p class="score">0</p>
                <div class="score-block score-block-7"></div>
                <div class="score-block score-block-6"></div>
                <div class="score-block score-block-5"></div>
                <div class="score-block score-block-4"></div>
                <div class="score-block score-block-3"></div>
                <div class="score-block score-block-2"></div>
                <div class="score-block score-block-1"></div>
            </div>
        </div>
    </div>
    <div id="canvas-container">
        <canvas id="canvas"></canvas>
    </div>
</div>